{
	"author":        "Keith Boice <69816300+keithboice@users.noreply.github.com>",
	"bin":           {
		"stylelint": "bin/cli.js"
	},
	"engines":       {
		"node": ">=14.0.0"
	},
	"files":         [
		"bin/cli.js",
		"src/index.js"
	],
	"homepage":      "https://github.com/keithboice/kb",
	"languageName":  "node",
	"license":       "MIT",
	"main":          "src/index.js",
	"publishConfig": {
		"access": "public",
		"bin":    "bin/cli.js"
	},
	"repository":    {
		"type": "git",
		"url":  "https://github.com/keithboice/kb.git"
	},
	"scripts":       {
		"build:cli": "ncc build ./bin/cli.js --license ../../LICENSE --stats-out ../../docs/reports/builds/cmd-stylelint/vercel.json -sm -o dist/cli",
		"build:main": "ncc build src/index.js --license ../../LICENSE --stats-out ../../docs/reports/builds/cmd-stylelint/vercel.json -sm -o dist/main",
		"build": "concurrently 'npm:build:cli' 'npm:build:main'",
		"test": "jest ../../tests/cmd-stylelint.test.js",
		"test:dev": "jest --watch",
		"test:coverage": "jest --coverage --no-cache"
	},
	"types":         "commonjs",
	"version": "0.0.1",
	"name": "@kb/cmd-stylelint",
	"dependencies": {
		"stylelint": "^13.9.0",
		"stylelint-config-idiomatic-order": "^8.1.0",
		"stylelint-config-prettier": "^8.0.2",
		"stylelint-config-standard": "^20.0.0",
		"stylelint-order": "^4.1.0",
		"app-root-path": "^3.0.0",
		"yargs": "^16.2.0"
	}
}
