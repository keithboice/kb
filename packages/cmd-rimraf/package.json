{
	"author": "Keith Boice <69816300+keithboice@users.noreply.github.com>",
	"bin": {
		"clean": "src/cli.js"
	},
	"engines": {
		"node": ">=14.0.0"
	},
	"files": [
		"src/cli.js",
		"src/index.js"
	],
	"homepage": "https://github.com/keithboice/kb",
	"languageName": "node",
	"license": "MIT",
	"main": "src/index.js",
	"publishConfig": {
		"access": "public",
		"bin": "src/cli.js"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/keithboice/kb.git"
	},
	"scripts": {
		"clean": "rimraf ../**/dist --rmdir=false",
		"build:cli": "ncc build ./src/cli.js --license ../../LICENSE --stats-out ../../docs/reports/builds/cmd-rimraf/vercel.json -sm -o dist/cli",
		"build:main": "ncc build src/index.js --license ../../LICENSE --stats-out ../../docs/reports/builds/cmd-rimraf/vercel.json -sm -o dist/main",
		"build": "concurrently 'npm:build:cli' 'npm:build:main'",
		"test": "jest ../../tests/cmd-rimraf.test.js",
		"test:dev": "jest --watch",
		"test:coverage": "jest --coverage --no-cache"
	},
	"types": "commonjs",
	"version": "0.0.1",
	"name": "@kb/cmd-rimraf",
	"dependencies": {
		"yargs": "^16.2.0",
		"rimraf": "^3.0.2"
	}
}
