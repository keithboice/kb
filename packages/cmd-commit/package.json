{
	"name": "@kb/cmd-commit",
	"author": "Keith Boice <69816300+keithboice@users.noreply.github.com>",
	"bin": {
		"commit": "bin/cli.js"
	},
	"engines": {
		"node": ">=14.0.0",
		"pnpm": ">=5"
	},
	"files": [
		"bin/cli.js",
		"src/index.js"
	],
	"homepage": "https://github.com/keithboice/kb",
	"languageName": "node",
	"license": "MIT",
	"main": "src/index.js",
	"publishConfig": {
		"access": "public",
		"bin": "bin/cli.js"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/keithboice/kb.git"
	},
	"scripts": {
		"commit": "cz",
		"build": "rimraf dist && ncc build src/index.js --license ../../LICENSE --stats-out ../../dist/reports/builds/config-jest/vercel.json -sm -o dist/",
		"build:cli": "ncc build ./bin/cli.js --license ../../LICENSE --stats-out ../../docs/reports/builds/cmd-commit/vercel.json -sm -o dist/cli",
		"build:main": "ncc build src/index.js --license ../../LICENSE --stats-out ../../docs/reports/builds/cmd-commit/vercel.json -sm -o dist/main",
		"build": "concurrently 'npm:build:cli' 'npm:build:main'",
		"test": "jest ../../tests/cmd-commit.test.js",
		"test:dev": "jest --watch",
		"test:coverage": "jest --coverage --no-cache"
	},
	"types": "commonjs",
	"version": "0.0.1",
	"dependencies": {
		"@vercel/ncc": "^0.27.0",
		"app-root-path": "^3.0.0",
		"chalk": "^4.1.0",
		"chalk-pipe": "^5.0.0",
		"cli-table": "^0.3.4",
		"commitizen": "^4.2.3",
		"cz-conventional-changelog": "^3.3.0"
	}
}
