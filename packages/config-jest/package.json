{
	"author": "Keith Boice <69816300+keithboice@users.noreply.github.com>",
	"homepage": "https://github.com/keithboice/kb",
	"name": "@kb/config-jest",
	"bin": {
		"test": "bin/cli.js"
	},
	"scripts": {
		"build:cli": "ncc build ./bin/cli.js --license ../../LICENSE --stats-out ../../docs/reports/builds/config-jest/vercel.json -sm -o dist/cli",
		"build:main": "ncc build src/index.js --license ../../LICENSE --stats-out ../../docs/reports/builds/config-jest/vercel.json -sm -o dist/main",
		"build": "concurrently 'npm:build:cli' 'npm:build:main'",
		"test": "jest ../../tests/config-jest.test.js",
		"test:dev": "jest --watch",
		"test:coverage": "jest --coverage --no-cache"
	},
	"dependencies": {
		"@vercel/ncc": "^0.27.0",
		"app-root-path": "^3.0.0",
		"chalk": "^4.1.0",
		"chalk-pipe": "^5.0.0",
		"cli-table": "^0.3.4",
		"jest": "^26.6.3",
		"jest-watch-directories": "^1.1.0",
		"require-main-filename": "^2.0.0",
		"yargs": "^16.2.0"
	}
}
